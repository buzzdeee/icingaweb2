[icingaweb_db]
type                = "db"
db                  = "<%= @dbwebtype %>"
host                = "<%= @dbwebhost %>"
port                = "<%= @dbwebport %>"
dbname              = "<%= @dbwebname %>"
username            = "<%= @dbwebuser %>"
password            = "<%= @dbwebpasswd %>"
charset = "UTF-8"
persistent = "0"

<% if @ldap_root_dn %>
[icingaweb_ldap]
type = "ldap"
hostname = "<%= @ldap_host %>"
port = "<%= @ldap_port %>"
encryption = "<%= @ldap_encryption %>"
root_dn = "<%= @ldap_root_dn %>"
bind_dn = "<%= @ldap_bind_dn %>"
bind_pw = "<%= @ldap_bind_pw %>"
<% end %>

[icinga_ido]
type                = "db"
db                  = "<%= @dbtype %>"
host                = "<%= @dbhost %>"
port                = "<%= @dbport %>"
dbname              = "<%= @dbname %>"
username            = "<%= @dbuser %>"
password            = "<%= @dbpasswd %>"
charset = "UTF-8"
persistent = "0"
