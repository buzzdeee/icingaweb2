[<%= @title %>]
type        = "<%= @resourcetype %>"
<% if @resourcetype == 'ssh' -%>
user        = "<%= @user %>"
private_key = "%= @private_key %>"
<% else -%>
port        = "<%= @real_port %>"
  <%- if @resourcetype == 'db' -%>
db          = "<%= @dbtype %>"
host        = "<%= @host %>"
dbname      = "<%= @dbname %>"
username    = "<%= @user %>"
password    = "<%= @password %>"
    <%- if @dbtype == 'pgsql' -%>
charset     = "<%= @charset %>"
persistent  = "<%= @persistent %>"
    <%- end -%>
  <%- end -%>
  <%- if @resourcetype == 'ldap' or @resourcetype == 'msldap' -%>
hostname    = "<%= @host %>"
encryption  = "<%= @encryption %>"
root_dn     = "<%= @root_dn %>"
bind_dn     = "<%= @bind_dn %>"
bind_pw     = "<%= @bind_pw %>"
  <%- end -%>
<% end -%>
